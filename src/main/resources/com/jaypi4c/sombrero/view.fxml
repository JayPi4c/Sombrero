<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.jaypi4c.sombrero.Controller"
      prefHeight="400" prefWidth="800" minWidth="800" maxWidth="800" minHeight="400" maxHeight="400">
    <AnchorPane fx:id="drawingAnchorPane"
                prefWidth="400" prefHeight="400"
                minWidth="400" maxWidth="400"
                minHeight="400" maxHeight="400"
                HBox.hgrow="NEVER">
        <Canvas fx:id="drawingCanvas"
                width="400" height="400"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.topAnchor="0.0"/>
    </AnchorPane>
    <AnchorPane
            prefWidth="400" prefHeight="400"
            minWidth="400" minHeight="400"
            maxWidth="400" maxHeight="400"
            HBox.hgrow="NEVER">
        <ImageView fx:id="processedImageView"
                   fitWidth="400" fitHeight="400"
                   AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0"/>
    </AnchorPane>
</HBox>
